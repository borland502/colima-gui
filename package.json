{
  "name": "colima-gui",
  "private": true,
  "version": "0.3.0",
  "author": "Kyle Taylor <kyle.taylor@datadoghq.com>",
  "main": "dist-electron/main.js",
  "packageManager": "bun@1.1.20",
  "scripts": {
    "dev": "bun run build:electron && bunx concurrently -k \"bun run dev:renderer\" \"bun run watch:electron\" \"bun run dev:electron\"",
    "dev:renderer": "bunx vite --port 1420",
    "dev:electron": "bunx wait-on tcp:1420 && bunx nodemon --watch dist-electron --ext js,cjs --exec \"VITE_DEV_SERVER_URL=http://localhost:1420 bunx electron dist-electron/main.js\"",
    "watch:electron": "tsc -p tsconfig.electron.json --watch --preserveWatchOutput",
    "build:electron": "tsc -p tsconfig.electron.json",
    "clean": "bunx rimraf dist dist-electron release",
    "build": "bun run build:electron && bunx vite build && bunx electron-builder",
    "preview": "bunx vite preview"
  },
  "dependencies": {
    "@emotion/react": "^11.11.4",
    "@emotion/styled": "^11.11.5",
    "@mui/material": "^6.1.5",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^9.0.1",
    "electron": "^31.3.0",
    "electron-builder": "^25.1.8",
    "nodemon": "^3.1.7",
    "rimraf": "^6.0.1",
    "typescript": "^5.0.2",
    "wait-on": "^7.2.0",
    "vite": "^6"
  },
  "build": {
    "appId": "com.borland502.colimagui",
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "electron/**/*",
      "resources/icons/**/*"
    ],
    "directories": {
      "buildResources": "resources",
      "output": "release"
    },
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "resources/icons/512x512.png"
    }
  }
}
