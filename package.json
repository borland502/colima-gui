{
  "name": "colima-gui",
  "private": true,
  "version": "0.4.2",
  "author": "Jeremy Hettenhouser <jhettenh@gmail.com>",
  "main": "dist-electron/main.js",
  "packageManager": "bun@1.3.4",
  "scripts": {
    "dev": "bun run build:electron && bunx concurrently -k \"bun run dev:renderer\" \"bun run watch:electron\" \"bun run dev:electron\"",
    "dev:renderer": "bunx vite --port 1420",
    "dev:electron": "bunx wait-on tcp:1420 && bunx nodemon --watch dist-electron --ext js,cjs --exec \"VITE_DEV_SERVER_URL=http://localhost:1420 bunx electron dist-electron/main.js\"",
    "watch:electron": "tsc -p tsconfig.electron.json --watch --preserveWatchOutput",
    "build:electron": "tsc -p tsconfig.electron.json",
    "generate:icons": "bunx tsx scripts/generate-icons.ts",
    "clean": "bunx rimraf dist dist-electron release",
    "build": "bun run build:electron && bunx vite build && bunx electron-builder",
    "preview": "bunx vite preview"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@mui/material": "^6.5.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "sharp": "^0.34.5"
  },
  "devDependencies": {
    "@types/react": "^18.3.27",
    "@types/react-dom": "^18.3.7",
    "@vitejs/plugin-react": "^4.7.0",
    "concurrently": "^9.2.1",
    "electron": "^39.2.6",
    "electron-builder": "^26.0.12",
    "nodemon": "^3.1.11",
    "rimraf": "^6.1.2",
    "typescript": "^5.9.3",
    "wait-on": "^7.2.0",
    "vite": "^6.4.1"
  },
  "build": {
    "appId": "com.borland502.colimagui",
    "publish": null,
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "electron/**/*",
      "resources/icons/**/*"
    ],
    "extraResources": [
      {
        "from": "resources/icons",
        "to": "icons"
      }
    ],
    "directories": {
      "buildResources": "resources",
      "output": "release"
    },
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "resources/icons/512x512.png",
      "identity": null,
      "hardenedRuntime": false,
      "gatekeeperAssess": false
    }
  },
  "productName": "Colima GUI"
}
